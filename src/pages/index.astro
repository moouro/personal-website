---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/components/Hero.astro'
import Projects from '@/components/Projects.astro'
import Stack from '@/components/Stack.astro'
import Footer from '@/components/Footer.astro'
import projectData from '@/data/projects.json'
import stackData from '@/data/stack.json'
import { Icon } from 'astro-icon/components'
import { ViewTransitions } from 'astro:transitions'
---

<Layout title='mouro.dev'>
  <ViewTransitions />
  <div class='grid h-svh grid-rows-newRow gap-4'>
    <header>
      <Hero />
    </header>

    <main class='space-y-12'>
      <section>
        <div class='container mx-auto max-w-2xl space-y-4 px-4'>
          <div class='items-xlline flex justify-between'>
            <h2 class='font-bold md:text-2xl'>Projetos Recentes</h2>
            <a
              class='flex items-center gap-2 transition-colors hover:text-dark-primary'
              href='/projects'
              >Ver todos <Icon name='ri:external-link-fill' />
            </a>
          </div>
          <div class='grid gap-4'>
            {
              projectData.map((projectData) => {
                return (
                  <Projects
                    name={projectData.name}
                    description={projectData.description}
                    url={projectData.url}
                  />
                )
              })
            }
          </div>
        </div>
      </section>

      <section>
        <div class='container mx-auto max-w-2xl space-y-4 px-4'>
          <h2 class='font-bold md:text-2xl'>Minha stack</h2>
          <p class='font-mono text-sm font-medium text-zinc-500 md:text-lg'>
            No meu fluxo de trabalho diário, confio em uma série de ferramentas
            que me ajudam a manter a eficiência e a qualidade em meus projetos.
          </p>

          <div class='grid gap-3 md:grid-cols-2'>
            {
              stackData.map((stackData) => {
                return (
                  <Stack
                    image={stackData.image}
                    title={stackData.title}
                    body={stackData.body}
                    href={stackData.href}
                  />
                )
              })
            }
          </div>
          <a
            href='/stack'
            class='mt-4 block text-center text-base hover:underline'
            >Ver mais ferramentas</a
          >
        </div>
      </section>
    </main>

    <footer>
      <Footer />
    </footer>
  </div>

  <style>
    header {
      background: url(../assets/bg-7.jpg);
      position: relative;
    }

    header::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7));
    }
  </style>
</Layout>
