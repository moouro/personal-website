---
import Layout from '@/layouts/Layout.astro'
import Hero from '@/components/Hero.astro'
import Project from '@/components/Project.astro'
import Stack from '@/components/Stack.astro'
import Footer from '@/components/Footer.astro'
import { Icon } from 'astro-icon/components'
import { ViewTransitions } from 'astro:transitions'
import Title from '@/components/Title.astro'
---

<Layout title='mouro.dev'>
	<ViewTransitions />
	<div class='grid h-svh grid-rows-[auto_1fr_auto] gap-4'>
		<header>
			<Hero />
		</header>

		<main>
			<section class='mt-14'>
				<div class='container mx-auto max-w-2xl px-4'>
					<div class='space-y-4'>
						<Title title='Projetos' />

						<div class='grid
          gap-4 md:grid-cols-1'>
							<Project
								work='Em desenvolvimento'
								name='Meu site pessoal'
								description='Com um design intuitivo e moderno, o mouro.dev combina a flexibilidade do Astro Build com a minha criatividade, mas também oferece uma navegação suave.'
								url='/'
							/>
						</div>

						<a
							class='flex w-fit items-center gap-4 rounded-md bg-surface px-5 py-2 text-heading transition-all duration-150 hover:bg-surface/70 hover:shadow-lg active:bg-surface/80 active:shadow-lg'
							href='/projects'
						>
							Todos os projetos
							<Icon name='code' size={15} />
						</a>
					</div>
				</div>
			</section>

			<section class='mt-14'>
				<div class='container mx-auto max-w-2xl px-4'>
					<div class='space-y-4'>
						<div>
							<Title title='Ferramentas' />
							<p>Algumas das ferramentas que utilizo para desenvolver meus projetos.</p>
						</div>

						<div class='grid gap-4 md:grid-cols-2'>
							<Stack
								image='vscode.svg'
								title='Visual Studio Code'
								body='Editor de código fonte'
								href='https://code.visualstudio.com/'
							/>

							<Stack
								image='figma.svg'
								title='Figma'
								body='Design de interfaces'
								href='https://www.figma.com/'
							/>

							<Stack
								image='notion.svg'
								title='Notion'
								body='Ferramenta de produtividade'
								href='https://www.notion.so/'
							/>

							<Stack
								image='chrome.svg'
								title='Google Chrome'
								body='Navegador web'
								href='https://www.google.com/chrome/'
							/>
						</div>
					</div>
					<a
						href='/stacks'
						class='mt-5 flex w-fit items-center gap-2 transition-all duration-150 hover:text-accent'
					>
						Ver mais ferramentas
						<Icon name='arrow' size={15} />
					</a>
				</div>
			</section>
		</main>
		<footer>
			<Footer />
		</footer>
	</div>
</Layout>
