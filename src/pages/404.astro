---
import Layout from '../layouts/Layout.astro'
import { ViewTransitions } from 'astro:transitions'
import Footer from '@/components/Footer.astro'
---

<Layout title='Página não encontrada'>
  <ViewTransitions />
  <div class='grid h-svh items-center justify-center'>
    <main
      class='grid grid-rows-2 place-items-center px-6 py-24 sm:py-32 lg:px-8'
    >
      <div class='text-center'>
        <p class='text-base font-semibold text-zinc-600'>404</p>
        <h1
          class='text-zync-900 mt-4 text-3xl font-bold tracking-tight sm:text-5xl'
        >
          Página não encontrada
        </h1>
        <p class='mt-6 text-base leading-7 text-gray-400'>
          Lamento, mas não consegui encontrar a página que procura.
        </p>
        <div class='mt-10 flex items-center justify-center gap-x-6'>
          <a
            href='/'
            class='rounded-md bg-violet-600 px-3.5 py-2.5 text-sm font-semibold text-violet-100 shadow-sm hover:bg-violet-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-violet-600'
            >Voltar para home</a
          >
        </div>
      </div>
    </main>

    <Footer />
  </div>
</Layout>
