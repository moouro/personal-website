---
interface Props {
	image: string
	title: string
	body: string
	href: string
}

const { image, href, title, body } = Astro.props
---

<a
	href={href}
	target='_blank'
	class='hover:bg-bg-secondary flex gap-4 rounded-md border border-border p-2 transition-all duration-200 hover:bg-surface hover:shadow-md'
>
	<img src={image} alt='Descrição da imagem' class='w-8' loading='lazy' />
	<div class='-space-y-0.5'>
		<h3 class='text-sm font-bold text-heading'>{title}</h3>
		<p class='text-xs'>{body}</p>
	</div>
</a>
