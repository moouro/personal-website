---
import { Icon } from 'astro-icon/components'

export interface Props {
  name: string
  description: string
  url: string
}

const { name, description, url } = Astro.props
---

<d4iv
  class='flex flex-col justify-between gap-2 rounded-lg border border-zinc-700 bg-dark-card p-4 shadow transition-transform duration-300 ease-in-out hover:scale-105'
>
  <h5 class='mb-2 text-xl font-bold tracking-tight text-zinc-100'>{name}</h5>

  <div class='space-y-3'>
    <p class='font-normal text-zinc-400'>{description}</p>

    <a
      target='_blank'
      class='flex w-fit items-center gap-2 rounded-md bg-dark-primary/40 px-3 py-2 text-sm text-zinc-100
   transition-colors duration-300 ease-in-out hover:bg-dark-primary/50 hover:text-zinc-50'
      href={url}>Ver online <Icon name='ri:arrow-right-up-line' /></a
    >
  </div>
</d4iv>
