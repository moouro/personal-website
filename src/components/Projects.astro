---
import { Icon } from 'astro-icon/components'

export interface Props {
  name: string
  description: string
  url: string
}

const { name, description, url } = Astro.props
---

<d4iv
  class='p-4 border rounded-lg shadow bg-dark-card border-zinc-700 flex flex-col gap-2 justify-between hover:scale-105 transition-transform duration-300 ease-in-out'
>
  <h5 class='mb-2 text-xl font-bold tracking-tight text-zinc-100'>{name}</h5>

  <div class='space-y-3'>
    <p class='font-normal text-zinc-400'>{description}</p>

    <a
      target='_blank'
      class='flex items-center gap-2 px-3 py-2 text-sm bg-dark-primary/40 rounded-md w-fit hover:bg-dark-primary/50
   transition-colors duration-300 ease-in-out text-zinc-100 hover:text-zinc-50'
      href={url}>Ver online <Icon name='ri:arrow-right-up-line' /></a
    >
  </div>
</d4iv>
